{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":automergeMinor", "schedule:automergeWeekdays"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/|\\.)Dockerfile$/",
        "/(^|/)Dockerfile\\.[^/]*$/"
      ],
      "matchStrings": [
        "(?:^|\\r?\\n)FROM\\s+(?<depName>ghcr\\.io/apollographql/apollo-runtime):(?<currentValue>[^\\s#]+)"
      ],
      "datasourceTemplate": "docker",
      "registryUrlTemplate": "https://ghcr.io",
      "versioningTemplate": "loose",
      "autoReplaceStringTemplate": "FROM {{{depName}}}:{{{newValue}}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["ghcr.io/apollographql/apollo-runtime"],
      "versioning": "loose"
    },
    {
      "matchPackageNames": ["ghcr.io/apollographql/apollo-runtime"],
      "matchUpdateTypes": ["pin", "digest"],
      "enabled": false
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/apollographql/apollo-runtime"],
      "allowedVersions": "/^\\d+\\.\\d+\\.\\d+_router\\d+\\.\\d+\\.\\d+_mcp-server\\d+\\.\\d+\\.\\d+$/",
      "prCreation": "immediate"
    }
  ]
}